{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "declaration": true,
    "target": "es5",
    "outDir": "dist",
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": ["src/index.ts"],
  "exclude": ["src/**/*.test.ts"]
}
